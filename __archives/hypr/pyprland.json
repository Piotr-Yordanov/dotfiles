{
  "pyprland": {
    "plugins": ["scratchpads", "expose"]
  },
  "scratchpads": {
    "term": {
      "command": "kitty --class kitty-dropterm",
      "animation": "fromTop",
      "unfocus": "hide"
    },
    "spotify": {
      "command": "kitty --class kitty-dropterm spotify_player",
      "animation": "fromRight",
      "unfocus": "hide"
    },
    "term_2": {
      "command": "kitty --class kitty-dropterm",
      "animation": "fromBottom",
      "unfocus": "hide"
    },
    "volume": {
      "command": "pavucontrol",
      "unfocus": "hide",
      "animation": "fromRight"
    }
  },
  "expose": {
    "include_special": true
  }
}
