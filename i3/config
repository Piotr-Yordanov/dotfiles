#####################################
### FLOATING WINDOWS              ###
#####################################

# Manage PAVUCONTROL
bindsym $mod+m [con_mark="music"] scratchpad show
for_window [class="Pavucontrol"] mark "music", move scratchpad
exec systemd-run --property=Restart=always --user --no-ask-password pavucontrol

# Manage One Shot Terminal
bindsym $mod+a [con_mark="upper-floating"] scratchpad show
for_window [title="UpperFloating"] mark "upper-floating", move scratchpad
exec systemd-run --property=Restart=always --user --no-ask-password kitty -T UpperFloating

# Manage One Shot Terminal
bindsym $mod+Ctrl+n [con_mark="floating-terminal"] scratchpad show
for_window [title="FloatingTerminal"] mark "floating-terminal", move scratchpad
exec systemd-run --property=Restart=always --user --no-ask-password kitty -T FloatingTerminal
