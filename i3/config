# for_window [class="Alacritty" title="floating_terminal"] floating toggle

# open a terminal in a vertical split


# kill focused window
bindsym $mod+q kill

# start program launcher
# bindsym $mod+d exec --no-startup-id /usr/sbin/rofi -show run
bindsym $mod+d exec --no-startup-id fish -c 'rofi -show run'
bindsym $mod+i exec --no-startup-id fish -c 'task context inbox && rofi -modi tasks:rofi-taskwarrior -show tasks -matching fuzzy'
bindsym $mod+shift+f exec --no-startup-id /usr/sbin/rofi -show file-browser-extended  -file-browser-depth 10 -file-browser-dir ~/
bindsym $mod+ctrl+v exec --no-startup-id ~/.config/bin/rofigreenclip
bindsym $mod+period exec --no-startup-id ~/.config/bin/rofigreenclip


# To figure out the `.` keycode, i need to run
# xev -event keyboard
# Then look for the 0x code
bindsym Mod4+0x2e exec --no-startup-id rofimoji \
  --selector-args="-theme ~/.config/rofi/rofimoji_dmenu.rasi" \
  --hidden-descriptions

focus_follows_mouse yes

# Resizing of windows
bindsym $mod+Shift+w resize shrink width 10px or 10ppt
bindsym $mod+Shift+s resize grow width 10px or 10ppt
# bindsym $mod+Shift+w exec $HOME/.config/i3/scripts/move_mouse_left.sh
# bindsym $mod+Shift+s exec $HOME/.config/i3/scripts/move_mouse_right.sh
# bindsym $mod+Shift+w resize grow height 10px or 10ppt
# bindsym $mod+Shift+s resize shrink height 10px or 10ppt


# change focus
bindsym $mod+Ctrl+h focus left
bindsym $mod+Ctrl+j focus down
bindsym $mod+Ctrl+k focus up
bindsym $mod+Ctrl+l focus right

# Focus last floating/tiling container
bindsym $mod+Ctrl+t focus mode_toggle

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right


# Move focused container to workspace
# bindsym $mod+Ctrl+1 move container to workspace $0
# bindsym $mod+Ctrl+2 move container to workspace $1
# bindsym $mod+Ctrl+3 move container to workspace $2
# bindsym $mod+Ctrl+4 move container to workspace $3
# bindsym $mod+Ctrl+5 move container to workspace number 5
# bindsym $mod+Ctrl+6 move container to workspace number 6
# bindsym $mod+Ctrl+7 move container to workspace number 7
# bindsym $mod+Ctrl+8 move container to workspace number 8
# bindsym $mod+Ctrl+9 move container to workspace number 9
# bindsym $mod+Ctrl+0 move container to workspace number 0

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $0; workspace $0
bindsym $mod+Shift+2 move container to workspace $1; workspace $1
bindsym $mod+Shift+3 move container to workspace $2; workspace $2
# bindsym $mod+Shift+4 move container to workspace $3; workspace $3

# split orientation
# bindsym $mod+h split h;exec notify-send 'tile horizontally'
# bindsym $mod+v split v;exec notify-send 'tile vertically'
bindsym $mod+Shift+e split h

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# toggle tiling / floating
bindsym $mod+t floating toggle

